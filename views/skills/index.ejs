<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>Skills</title>
</head>
<body>
    <h1>Skills</h1>
    <ul>
        <% skills.forEach(function(skill) { %>
            <li>
                <form action="/skills/<%= skill.id %>?_method=DELETE"
                    class="delete-form" method="POST">
                    <button type="submit">X</button>
                  </form>
                <a href="/skills/<%= skill.id %>"><%= skill.skill %></a>
                -
                <%= skill.expert ? 'Expert Status' : 'Not an expert YET'%>
            </li>
          <% }) %>
    </ul>
    <a href="/skills/new">Add Skill</a>
</body>
</html>